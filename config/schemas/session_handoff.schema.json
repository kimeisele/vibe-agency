{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agency.os/schemas/session_handoff.json",
  "title": "Session Handoff",
  "description": "Canonical schema for session handoff files (.session_handoff.json). Supports 2.0_4layer rich structure with extended details.",
  "type": "object",
  "required": [
    "_schema_version",
    "_token_budget",
    "layer0_bedrock",
    "layer1_runtime"
  ],
  "properties": {
    "_schema_version": {
      "type": "string",
      "description": "Handoff schema version (e.g., 2.0_4layer)",
      "pattern": "^[0-9]+\\.[0-9]+(_[a-z0-9]+)?$"
    },
    "_token_budget": {
      "type": "integer",
      "minimum": 1,
      "description": "Token budget for handoff message (must be positive)"
    },
    "_verified_date": {
      "type": "string",
      "description": "Timestamp when status was verified"
    },
    "_note": {
      "type": "string",
      "description": "Verification note or metadata"
    },
    "layer0_bedrock": {
      "type": "object",
      "description": "Layer 0: High-level state (complete/blocked/needs-input/in-progress)",
      "required": ["from", "date", "state"],
      "properties": {
        "from": {
          "type": "string",
          "minLength": 1,
          "description": "Who/what created this handoff (e.g., 'STEWARD - Session XYZ')"
        },
        "date": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}",
          "description": "Date in YYYY-MM-DD format (or ISO 8601)"
        },
        "state": {
          "type": "string",
          "enum": ["operational", "complete", "blocked", "needs-input", "in-progress"],
          "description": "Current session state"
        },
        "blocker": {
          "type": ["string", "null"],
          "description": "What is blocking progress (null if none)"
        }
      },
      "additionalProperties": true
    },
    "layer1_runtime": {
      "type": "object",
      "description": "Layer 1: Runtime context (status summary, todos, critical files)",
      "properties": {
        "current_status": {
          "type": "string",
          "description": "Current operational status"
        },
        "completed_summary": {
          "type": "string",
          "description": "What was completed in this session"
        },
        "todos": {
          "type": "array",
          "description": "Remaining tasks",
          "items": {
            "type": "string"
          }
        },
        "critical_files": {
          "type": "array",
          "description": "Files the next agent should read first",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "layer2_detail": {
      "type": "object",
      "description": "Layer 2: Technical details (verified status, test results, decisions, next steps)",
      "properties": {
        "verified_status": {
          "type": "array",
          "description": "Verified component status with evidence",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "test_failures_detail": {
          "type": "array",
          "description": "Details about expected/known test failures",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "completed_work": {
          "type": "array",
          "description": "List of completed work items (PRs, commits, etc.)",
          "items": {
            "type": "string"
          }
        },
        "warnings": {
          "type": "array",
          "description": "Warnings, gotchas, things to watch",
          "items": {
            "type": "string"
          }
        },
        "next_steps_detail": {
          "type": "array",
          "description": "Detailed breakdown of next actions (step, why, priority, time, command, impact)",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
